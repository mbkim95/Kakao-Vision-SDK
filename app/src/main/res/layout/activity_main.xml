<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/extracted_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/extracted_sentence"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/extracted_sv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/extracted_title">

                <TextView
                    android:id="@+id/extracted_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="ABCD\nEFG\nHIJK\nLMNOP\nQRS\nTUV\nWX\nYZ" />
            </androidx.core.widget.NestedScrollView>

            <TextView
                android:id="@+id/result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/translate_result"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/extracted_title"
                app:layout_constraintTop_toBottomOf="@id/extracted_sv" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/result_sv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/result_title">

                <TextView
                    android:id="@+id/result_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="ABCD\nEFG\nHIJK\nLMNOP\nQRS\nTUV\nWX\nYZ" />
            </androidx.core.widget.NestedScrollView>

            <Button
                android:id="@+id/select_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/select_image"
                app:layout_constraintEnd_toStartOf="@id/translate_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/result_sv" />

            <Button
                android:id="@+id/translate_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/select_btn"
                app:layout_constraintTop_toTopOf="@id/select_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>